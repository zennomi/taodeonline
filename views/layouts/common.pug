  body
    // Main content
    #panel.sticky-top
      // Topnav
      nav.navbar.navbar-top.navbar-expand.navbar-dark.px-0.px-md-2.py-1.bg-success.bg-gradient
        .container-fluid
          a.mr-0.me-md-1(href="/")
            img(src='/img/logo.jpg' class="img-fluid rounded shadow" style="width: 50px;")
          #navbarSupportedContent.collapse.navbar-collapse
            // Search form
            //- form#navbar-search-main.navbar-search.navbar-search-light.form-inline.mr-sm-3
            //-   .form-group.mb-0
            //-     .input-group.input-group-alternative.input-group-merge
