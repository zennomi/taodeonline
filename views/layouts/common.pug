            //-         span.input-group-text
            //-           i.fas.fa-search
            //-       input.form-control(placeholder='Nhập câu hỏi...', type='text')
              button.close(type='button', data-action='search-close', data-target='#navbar-search-main', aria-label='Close')
                span(aria-hidden='true') &times;
            // Navbar links
            ul.navbar-nav.align-items-center.ml-md-auto
              //- li.nav-item.d-xl-none
              //-   // Sidenav toggler
              //- li.nav-item.d-sm-none
              //-   a.nav-link(href='#', data-action='search-show', data-target='#navbar-search-main')
              //-     i.ni.ni-zoom-split-in
              li.nav-item.dropdown
                a#questionDropdown.nav-link.mx-md-1(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false' data-bs-toggle="dropdown")
                  i.fas.fa-stars.text-yellow
                  |   Luyện online
                .dropdown-menu.dropdown-menu-xl.dropdown-menu-end.overflow-hidden
                  .nav-item.dropdown.dropdown-menu-inner
                    a.media.d-flex.align-items-center.mb-2.mb-md-4(href='/courses')
                      .icon.icon-shape.bg-gradient-warning.rounded-circle.text-white
                        i.fas.fa-graduation-cap
                      .media-body.ml-3
                        h5.heading.text-warning.mb-md-1 Khoá luyện đề
                        p.description.d-none.d-md-inline-block.mb-0 Luyện đề thi THPT Quốc Gia bám sát cấu trúc với lời giải chi tiết, nhóm facebook hỗ trợ, các chức năng để trải nghiệm thi thử là tốt nhất.
                    a.media.d-flex.align-items-center.mb-2.mb-md-4(href='/tests')
                      .icon.icon-shape.bg-gradient-danger.rounded-circle.text-white
                        i.fas.fa-file-edit
                      .media-body.ml-3
                        h6.heading.text-danger.mb-md-1 Ngân hàng đề miễn phí
                        p.description.d-none.d-md-inline-block.mb-0 Đề luyện thi THPT Quốc Gia sát nhất với cấu trúc của Bộ, đề thi học kì lớp 9,10,11,12,...
                    a.media.d-flex.align-items-center(href='/questions')
                      .icon.icon-shape.bg-gradient-primary.rounded-circle.text-white
                        i.fas.fa-list-ol
                      .media-body.ml-3
                        h6.heading.text-primary.mb-md-1 Câu hỏi trắc nghiệm
                        p.description.d-none.d-md-inline-block.mb-0 10000+ câu hỏi có lời giải cực chi tiết.

              li.nav-item.dropdown
                a.nav-link.mx-md-1(href='#', role='button', data-toggle='dropdown' data-bs-toggle='dropdown' aria-haspopup='true', aria-expanded='false')
                  | Hỗ trợ
                .dropdown-menu.dropdown-menu-lg.dropdown-menu-dark.dropdown-menu-end.bg-primary
                  .row.row-cols-2.g-1.m-1
                    .col.p-1
                      a.list-group-item.list-group-item-action.text-center(href='https://www.facebook.com/HocLyThayQuy/' target="_blank")
                        div
                          span.shortcut-media.avatar.rounded-circle.bg-gradient-purple
                            i.fab.fa-facebook
                        h4.mb-0.text-sm Fanpage Facebook
                    .col.p-1
                      a.list-group-item.list-group-item-action.text-center(href='https://m.me/ngdatuananh/' target="_blank")
                        div
                          span.shortcut-media.avatar.rounded-circle.bg-gradient-pink
                            i.fab.fa-facebook-messenger
                        h4.mb-0.text-sm Phòng CNTT VLSN
                    .col.p-1
                      a.list-group-item.list-group-item-action.text-center(href='https://www.facebook.com/groups/giaimoibaily' target="_blank")
                        div
                          span.shortcut-media.avatar.rounded-circle.bg-gradient-blue
                            i.fas.fa-users-class
                        h4.mb-0.text-sm Group Ở đây giải mọi bài tập Lý
                    .col.p-1
                      a.list-group-item.list-group-item-action.text-center(href='https://www.youtube.com/channel/UCeJKtPNOdWnp9ya5jKBiu2w' target="_blank")
                        div
                          span.shortcut-media.avatar.rounded-circle.bg-gradient-red
                            i.fab.fa-youtube
                        h4.mb-0.text-sm Kênh Youtube Bài Giảng
                    
            if user
                ul.navbar-nav.align-items-center.ml-auto.ml-md-0
                    li.nav-item.dropdown
                        a.nav-link.pr-0(href='#', role='button', data-toggle='dropdown', data-bs-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                            .media.align-items-center
                                span.avatar.avatar-sm.rounded-circle
                                    if user.avatar
                                      img(alt='avatar', src=user.avatar)
                                    else  
                                      img(src='/img/logo.jpg')
                                .media-body.ml-2.d-none.d-lg-block.text-truncate
                                 span#userName.mb-0.text-sm.font-weight-bold= user.displayName
                            .dropdown-menu.dropdown-menu-end
                                .dropdown-header.noti-title
                                    h6.text-overflow.m-0= "Xin chào, " + user.displayName
                                a.dropdown-item(href='/user/' + user.id)
                                    i.fad.fa-id-badge
                                    span Trang cá nhân
                                //- a.dropdown-item(href='#')
                                //-     i.ni.ni-settings-gear-65
                                //-     span Cài đặt
                                //- a.dropdown-item(href='#!')
                                //-     i.ni.ni-calendar-grid-58
                                //-     span Tình trạng hoạt động
                                if user.isAdmin 
                                  a.dropdown-item(href="/tests/create")
                                    i.fad.fa-shopping-cart
                                    span Xem giỏ câu hỏi
                                  a.dropdown-item(href="/courses/manage")
                                    i.fad.fa-shopping-cart
                                    span Quản lý khoá học
                                a.dropdown-item(href='http://m.me/HocLyThayQuy')
                                    i.fad.fa-question-circle
                                    span Hỗ trợ
                                .dropdown-divider
                                a.dropdown-item(href='/auth/logout')
                                    i.fad.fa-sign-out
                                    span Đăng xuất    
            else
                a.btn.btn-warning.nav-item.btn-sm(href="/auth/login") Đăng nhập
